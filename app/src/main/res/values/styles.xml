<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/blue_dark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <!--<item name="inputTextColor">@color/white</item>-->
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="TilStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PaymonButtonBlue" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttons_background_blue</item>
    </style>

</resources>
