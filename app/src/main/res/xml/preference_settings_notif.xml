<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="MESSAGES_NOTIFICATION_CATEGORY"
        android:title="@string/notif_messages">
