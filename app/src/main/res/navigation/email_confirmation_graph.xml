<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/email_confirmation_graph"
    app:startDestination="@id/fragmentRegistrationEmailConfirmation">

    <fragment
        android:id="@+id/fragmentRegistrationEmailConfirmation"
        android:name="ru.paymon.android.view.FragmentRegistrationEmailConfirmation"
        android:label="fragment_registration_email_confirmation"
        tools:layout="@layout/fragment_registration_email_confirmation" >
        <action
            android:id="@+id/action_fragmentRegistrationEmailConfirmation_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_fragmentRegistrationEmailConfirmation_to_fragmentStart2"
            app:destination="@id/fragmentStart" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="ru.paymon.android.activities.MainActivity"
        android:label="mainActivity"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/fragmentStart"
        android:name="ru.paymon.android.view.FragmentStart"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" />
</navigation>