<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialog_progress_money_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_button" />

    <TextView
        android:id="@+id/dialog_progress_money_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_progress_money_image"
        app:layout_constraintEnd_toEndOf="@+id/dialog_progress_money_image"
        app:layout_constraintStart_toStartOf="@+id/dialog_progress_money_image"
        tools:text="Loading" />

    <TextView
        android:id="@+id/dialog_progress_money_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_progress_money_image"
        app:layout_constraintStart_toStartOf="@+id/dialog_progress_money_image"
        app:layout_constraintTop_toBottomOf="@+id/dialog_progress_money_image"
        tools:text="Exchange rates and wallets" />
</android.support.constraint.ConstraintLayout>