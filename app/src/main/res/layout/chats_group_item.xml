<?xml version="1.0" encoding="utf-8"?>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cell_dialog_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ru.paymon.android.components.CircleImageView
                    android:id="@+id/avatar_dialog_image_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />
            </LinearLayout>

    <TextView
        android:id="@+id/time_cell_dialog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="right"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/msg_cell_dialog_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:maxHeight="20dp"
                android:text="msg"
                app:layout_constraintBottom_toBottomOf="@+id/cell_dialog_ll2"
                app:layout_constraintLeft_toRightOf="@+id/cell_dialog_ll2"
                app:layout_constraintTop_toTopOf="@+id/cell_dialog_ll2"
                app:layout_constraintVertical_bias="0.5" />

            <LinearLayout
                android:id="@+id/cell_dialog_ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/cell_dialog_ll"
                app:layout_constraintTop_toBottomOf="@+id/name_cell_dialog_text_view"
                app:layout_constraintVertical_bias="0.16000003">

                <ru.paymon.android.components.CircleImageView
                    android:id="@+id/last_msg_user_photo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1" />
            </LinearLayout>

    <TextView
        android:id="@+id/name_cell_dialog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/time_cell_dialog_text_view"
        app:layout_constraintLeft_toRightOf="@+id/cell_dialog_ll"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/identificator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/name_cell_dialog_text_view"
        app:layout_constraintStart_toEndOf="@+id/name_cell_dialog_text_view"
        app:layout_constraintTop_toTopOf="@+id/name_cell_dialog_text_view"
        app:srcCompat="@drawable/ic_group_identificator" />

        </android.support.constraint.ConstraintLayout>
