    <ru.paymon.android.components.CircularImageView
        android:id="@+id/image_contact_invite_registered"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_photo_none"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"  />

    <TextView
        android:id="@+id/name_contact_invite_registered"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_contact_invite_registered"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_contact_invite_registered"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/name_contact_invite_registered"
        app:layout_constraintTop_toBottomOf="@+id/name_contact_invite_registered" />

    <CheckBox
        android:id="@+id/checkbox_contact_invite_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_contact_invite_registered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_contact_invite_registered" />

</android.support.constraint.ConstraintLayout>