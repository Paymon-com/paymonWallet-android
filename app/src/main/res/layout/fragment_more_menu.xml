<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        android:id="@+id/fragment_more_menu_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:headerLayout="@layout/fragment_more_menu_header"
        app:itemIconTint="@drawable/navigation_menu_item_icon_tint"
        app:itemTextColor="@color/white"
        app:itemTextAppearance="@style/NavigationDrawerStyle"
        app:menu="@menu/more_menu">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:src="@drawable/transparent_gradient"
            android:layout_gravity="bottom"/>

    </android.support.design.widget.NavigationView>
</FrameLayout>