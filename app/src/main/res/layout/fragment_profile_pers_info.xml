<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/profile_bday_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="@string/bday"
        android:textColor="@color/very_dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_information_text_view" />

    <ImageView
        android:id="@+id/profile_bday_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_profile_bday"
        app:layout_constraintBottom_toBottomOf="@+id/profile_bday_text_view"
        app:layout_constraintEnd_toStartOf="@+id/profile_bday_text_view"
        app:layout_constraintTop_toTopOf="@+id/profile_bday_text_view" />

    <TextView
        android:id="@+id/personal_information_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/personal_information"
        android:textAllCaps="true"
        android:textColor="@color/blue_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/profile_country_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_profile_country"
        app:layout_constraintBottom_toBottomOf="@+id/profile_country_text_view"
        app:layout_constraintEnd_toStartOf="@+id/profile_country_text_view"
        app:layout_constraintTop_toTopOf="@+id/profile_country_text_view" />

    <TextView
        android:id="@+id/profile_country_text_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="@string/country"
        android:textColor="@color/very_dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_bday_text_view" />
</android.support.constraint.ConstraintLayout>