<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ru.paymon.android.components.CircularImageView
        android:id="@+id/fragment_more_menu_header_profile_avatar_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile_photo_none"
        app:civ_border_color="@color/borderBlue"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_more_menu_header_profile_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_more_menu_header_profile_hint_text_view"
        app:layout_constraintStart_toEndOf="@+id/fragment_more_menu_header_profile_avatar_image_view"
        app:layout_constraintTop_toTopOf="@+id/fragment_more_menu_header_profile_avatar_image_view"
        tools:text="Pomelov Sergey" />

    <TextView
        android:id="@+id/fragment_more_menu_header_profile_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/more_menu_go_profile"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_more_menu_header_profile_avatar_image_view"
        app:layout_constraintStart_toEndOf="@+id/fragment_more_menu_header_profile_avatar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_more_menu_header_profile_name_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:src="@drawable/transparent_gradient_rev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>