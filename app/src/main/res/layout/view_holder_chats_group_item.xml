        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/chats_item_last_msg_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:src="@drawable/profile_photo_none"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:layout_constraintBottom_toBottomOf="@+id/chats_item_avatar"
            app:layout_constraintStart_toEndOf="@+id/chats_item_avatar" />


        <TextView
            android:id="@+id/chats_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/chats_item_time"
            app:layout_constraintStart_toEndOf="@+id/group_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/chats_item_name"
            app:layout_constraintStart_toEndOf="@+id/chats_item_avatar"
            app:layout_constraintTop_toTopOf="@+id/chats_item_name"
