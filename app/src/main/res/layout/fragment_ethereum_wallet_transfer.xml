        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_ethereum_amount_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/fragment_ethereum_wallet_transfer_fiat_eq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView25">

            <EditText
                android:id="@+id/fragment_ethereum_wallet_transfer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:hint="Введите сумму"
                android:inputType="numberDecimal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/fragment_ethereum_wallet_transfer_fiat_eq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_thin"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_ethereum_amount_input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_ethereum_amount_input_layout" />


        <com.warkiz.widget.IndicatorStayLayout
            android:id="@+id/indilayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView23">

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/fragment_ethereum_wallet_transfer_gas_price_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@color/blue_bright"
                app:isb_thumb_color="@color/blue_bright"
                app:isb_track_progress_color="@color/blue_bright" />
        </com.warkiz.widget.IndicatorStayLayout>

        <com.warkiz.widget.IndicatorStayLayout
            android:id="@+id/indilayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indilayout1">

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/fragment_ethereum_wallet_transfer_gas_limit_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@color/blue_bright"
                app:isb_thumb_color="@color/blue_bright"
                app:isb_track_progress_color="@color/blue_bright" />
        </com.warkiz.widget.IndicatorStayLayout>

        <TextView
            android:id="@+id/label_network_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_thin"
            android:text="network fee"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceListItem"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indilayout2" />

        <TextView
            android:id="@+id/fragment_ethereum_wallet_transfer_network_fee_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_thin"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/label_network_fee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_network_fee"
            app:layout_constraintTop_toTopOf="@+id/label_network_fee"
            tools:text="0.0027 ETH" />

        <TextView
            android:id="@+id/label_network_fee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_thin"
            android:text="total"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceListItem"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24" />

        <TextView
            android:id="@+id/fragment_ethereum_wallet_transfer_total_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_thin"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/label_network_fee1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_network_fee1"
            app:layout_constraintTop_toTopOf="@+id/label_network_fee1"
            tools:text="0.0027 ETH" />

        <!--<TextView-->
        <!--android:id="@+id/textView1"-->
        <!--android:layout_width="wrap_content"-->
