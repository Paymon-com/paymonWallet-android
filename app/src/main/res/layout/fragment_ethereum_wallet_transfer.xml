<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include_toolbar_ethereum_wallet_transfer"
            layout="@layout/toolbar_ethereum_wallet_transfer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fragment_ethereum_wallet_eur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_dialog_title"
            android:text="@string/eur"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/fragment_ethereum_wallet_local"
            app:layout_constraintStart_toEndOf="@+id/fragment_ethereum_wallet_usd"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar_ethereum_wallet_transfer" />

        <ImageView
            android:id="@+id/fragment_ethereum_wallet_usd_backlight"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/blue_bright"
            app:layout_constraintEnd_toEndOf="@+id/fragment_ethereum_wallet_usd"
            app:layout_constraintStart_toStartOf="@+id/fragment_ethereum_wallet_usd"
            app:layout_constraintTop_toBottomOf="@+id/fragment_ethereum_wallet_usd" />

        <ImageView
            android:id="@+id/fragment_ethereum_wallet_eur_backlight"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:src="@color/bg_dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/fragment_ethereum_wallet_eur"
            app:layout_constraintStart_toStartOf="@+id/fragment_ethereum_wallet_eur"
            app:layout_constraintTop_toBottomOf="@+id/fragment_ethereum_wallet_eur" />

        <ImageView
            android:id="@+id/fragment_ethereum_wallet_local_backlight"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/bg_dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/fragment_ethereum_wallet_local"
            app:layout_constraintStart_toStartOf="@+id/fragment_ethereum_wallet_local"
            app:layout_constraintTop_toBottomOf="@+id/fragment_ethereum_wallet_local" />

        <Button
            android:id="@+id/fragment_ethereum_wallet_usd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_dialog_title"
            android:text="@string/usd"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/fragment_ethereum_wallet_eur"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar_ethereum_wallet_transfer" />

        <Button
            android:id="@+id/fragment_ethereum_wallet_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/bg_dialog_title"
            android:text="rub"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_ethereum_wallet_eur"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar_ethereum_wallet_transfer" />

        <!--<TextView-->
        <!--android:id="@+id/textView28"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="24dp"-->
        <!--android:fontFamily="sans-serif-light"-->
